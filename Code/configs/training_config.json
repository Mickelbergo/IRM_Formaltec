{
    "data": {
        "path":  "E:/projects/Wound_Segmentation_III/Data" ,
        "preprocess_path": "E:/projects/Wound_Segmentation_III/IRM_Formaltec/Code/training"
    
    },
    "model": {
        "version": "v1.5",
        "encoder": "transformer",
        "encoder_weights": "noisy-student-475",
        "activation": null,
        "segmentation_classes": 11,
        "class_weights": [1, 60]
    },
    "training": {
        "batch_size": 8,
        "num_epochs": 100,
        "split_ratio": 0.8,
        "metrics": ["accuracy", "iou_score"],
        "sampler": false,
        "grad_clip_value": 10,
        "display_image": true,
        "num_workers": 1,
        "mixed_precision": true,
        "use_diffusion_images": true,
        "valid_extensions": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"],
        "final_model_epoch": 150,
        "f1_average": "macro",
        "dice_loss_mode": "multiclass",
        "gradCAM": false,
        "random_seed": 42,
        "focal_loss": {
            "alpha": 0.5,
            "gamma": 4.0,
            "reduction": "mean"
        },
        "grid_search_enabled": false,
        "non_grid_search": {
            "use_focal_loss": true,
            "learning_rate": 0.0004,
            "optimizer": "adamw",
            "lr_scheduler_gamma": 0.999,
            "weight_range_multiclass": [50, 200],
            "loss_functions": ["dice"],
            "lambda_loss": 10

        },
        "grid_search_parameters": {
            "learning_rate": [0.0005, 0.0001, 0.0003, 0.004],
            "optimizer": ["adamw", "sgd"],
            "lr_scheduler_gamma": [0.999, 0.99, 0.9999],
            "use_focal_loss": [true, false],
            "loss_functions": ["dice", "focal_loss"],
            "lambda_loss": [8, 5, 10, 1]
        }



    }
}