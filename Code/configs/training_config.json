{
    "data": {
        "path":  "E:/projects/Wound_Segmentation_III/Data" ,
        "preprocess_path": "E:/projects/Wound_Segmentation_III/IRM_Formaltec/Code/training"
    
    },
    "model": {
        "version": "v1.6",
        "encoder": "vit",
        "vit_config": {
            "model_name": "facebook/dinov2-giant",
            "target_layer": "decoder1.0",
            "stage1_epochs": 20,
            "stage2_epochs": 20,
            "unfreeze_layers_stage2": 16,
            "unfreeze_layers_stage3": 32,
            "stage2_lr_factor": 0.5,
            "stage3_lr_factor": 0.1,
            "dropout_rate": 0.2
        },
        "encoder_weights": "noisy-student-475",
        "activation": null,
        "segmentation_classes": 11,
        "class_weights": [1, 60]
    },
    "training": {
        "batch_size": 8,
        "num_epochs": 70,
        "weight_decay": 1e-4,
        "save_intermediate_models": true,
        "split_ratio": 0.8,
        "metrics": ["accuracy", "iou_score"],
        "sampler": false,
        "grad_clip_value": 0.1,
        "display_image": false,
        "num_workers": 10,
        "mixed_precision": true,
        "use_diffusion_images": false,
        "valid_extensions": [".jpg", ".jpeg", ".png", ".bmp", ".tiff"],
        "final_model_epoch": 150,
        "f1_average": "macro",
        "dice_loss_mode": "multiclass",
        "gradCAM": false,
        "random_seed": 42,
        "focal_loss": {
            "alpha": 0.5,
            "gamma": 4.0,
            "reduction": "mean"
        },
        "progressive_training": true,
        "grid_search_enabled": true,
        "non_grid_search": {
            "use_focal_loss": false,
            "learning_rate": 0.0001,
            "optimizer": "adamw",
            "lr_scheduler_gamma": 0.999,
            "weight_range_multiclass": [10,50],
            "loss_functions": ["dice"],
            "lambda_loss": 12

        },
        "grid_search_parameters": {
            "learning_rate": [0.0001, 0.00001,0.000005],
            "optimizer": ["adamw"],
            "lr_scheduler_gamma": [0.999,  0.99990, 0.99],
            "use_focal_loss": [false],
            "loss_functions": ["dice"],
            "lambda_loss": [12, 20,10,15]
        }



    }
}